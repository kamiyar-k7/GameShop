@model Application.DTOs.AdminSide.Account.SignUpDto;

@{
	
	Layout = null;
}

<!DOCTYPE html>
<html>

<head>
	<title>Game Shop SignIn</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="Gaming Login Form Widget Tab Form,Login Forms,Sign up Forms,Registration Forms,News letter Forms,Elements" />
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<link href="/Login/css/style.css" rel="stylesheet" type="text/css" media="all" />
</head>

<body>
	<div class="padding-all">
		<div class="header">
			<h1><img src="/Login/images/5.png" alt=" "> Gaming Login Form</h1>
		</div>

		<div class="design-w3l">
			<div class="mail-form-agile">
				<form asp-controller="Account" asp-action="SignUp" method="post">
					<input type="text" asp-for="UserName" placeholder="Enter UserName" />
					<input type="email" asp-for="Email" placeholder="MyEmail@Email.com" required="" class="padding">
					<input type="tel" asp-for="PhoneNumber" placeholder="PhoneNumber" required="" class="padding">			
					<input type="password" asp-for="Password" class="padding" placeholder="Password" required="">
					<input type="password" asp-for="RepeatPassword" class="padding" placeholder="Repeat Password" required="">
					<div>
						<label class="padding" style="color:white"><a href="#">Forgot Password?</a></label>
						<br />
						<br />
						<label  class="padding" style="color:white">Already Have An Account? <a href="#">Sign In</a></label>
					</div>
					<br />
					<input type="submit" value="Submit" class="padding">
				</form>
				
				</div>
			
			<div class="clear"> </div>
		</div>

		<div class="footer">
			<p>© 2024 Gaming Shop All Rights Reserved   <a href="#">   </a></p>
		</div>
	</div>
</body>
</html>