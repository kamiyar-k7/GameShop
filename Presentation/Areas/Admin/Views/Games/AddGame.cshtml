                                                            } *@
                                                            <img id="preview" src="~/assets/images/UserAvatar/b322929f63a146bb94651bae589c19fc.jpg" alt="Image Preview">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-8">
                                                    <div class="row">
                                                        <div class="col-lg-12">

                                                            <div class="product-edt-pix-wrap">
                                                                <div class="input-group">
                                                                    <span class="input-group-addon">TT</span>
                                                                    <input type="text" class="form-control" placeholder="Add Game ScrrenShot" readonly style="color:#152036; background-color:#152036;">
                                                                </div>


                                                                <div class="row">

                                                                    <div class="col-lg-6">
                                                                        <div class="product-edt-remove">
                                                                            <a asp-area="admin" asp-controller="Users" asp-action="DeleteUserAvatar" asp-route-Id="" style="margin-bottom: 20px; margin-top:20px;" type="button" class="btn btn-ctl-bt waves-effect waves-light" onclick="return confirm('are you sure you want Delete User Avatar ?')">
                                                                                Remove
                                                                                <i class="fa fa-times" aria-hidden="true"></i>
                                                                            </a>
                                                                            <br />
                                                                            <input type="file"  class="btn btn-ctl-bt waves-effect waves-light" id="formFile" onchange="previewImage(event)">


                                                                            </input>
                                                                        </div>



                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <hr />
                                          
                                        </div>
                                    </div>
                                </div>
                            </div>

                        

                            <div class="product-tab-list tab-pane fade" id="INFORMATION">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">


                                        <div class="col-lg-8">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="product-edt-pix-wrap">
                                                        <div class="input-group">
